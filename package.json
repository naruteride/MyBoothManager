{
  "author": "somni <me@somni.one>",
  "private": true,
  "packageManager": "yarn@3.6.3",
  "scripts": {
    "all": "yarn workspaces foreach run",
    "all:build": "yarn all build",
    "common": "yarn workspace @myboothmanager/common",
    "common:build": "yarn common build && yarn install",
    "admin": "yarn workspace @myboothmanager/admin",
    "backend": "yarn workspace @myboothmanager/backend",
    "pre": "yarn install && yarn common:build",
    "dev": "concurrently -n \"ADMIN,BACKEND\" -c \"bgRed.bold,bgBlue.bold\" --kill-others \"yarn workspace @myboothmanager/admin dev\" \"yarn workspace @myboothmanager/backend start:dev\"",
    "preview": "concurrently -n \"ADMIN,BACKEND\" -c \"bgRed.bold,bgBlue.bold\" --kill-others \"yarn workspace @myboothmanager/admin preview\" \"yarn workspace @myboothmanager/backend start:prod\"",
    "test": "yarn node --experimental-vm-modules \"$(yarn bin jest)\"",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "workspaces": [
    "projects/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
