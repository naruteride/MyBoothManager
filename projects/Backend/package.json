{
  "name": "@myboothmanager/backend",
  "version": "0.5.0",
  "author": "somni <me@somni.one>",
  "private": true,
  "packageManager": "pnpm@9.2.0",
  "scripts": {
    "__run": "cross-env NODE_OPTIONS=\"--import ./scripts/node/register-esm-loader.cjs\"",
    "build": "nest build",
    "start": "pnpm __run nest start",
    "start:dev": "pnpm __run NODE_ENV=development nest start --watch --preserveWatchOutput",
    "start:debug": "pnpm __run nest start --debug --watch",
    "start:prod": "pnpm migrate:prod up && pnpm start:prod:no-migrate",
    "start:prod:no-migrate": "cross-env NODE_ENV=production pnpm start",
    "migrate": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register scripts/db-migrator/migrate",
    "migrate:prod": "pnpm __run NODE_ENV=production node dist/scripts/db-migrator/migrate",
    "seed": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register scripts/db-migrator/seed",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "pnpm lint --fix",
    "test": "jest",
    "test:watch": "pnpm test --watch",
    "test:cov": "pnpm test --coverage"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@myboothmanager/common": "workspace:^",
    "@nestjs/common": "^10.3.9",
    "@nestjs/core": "^10.3.9",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-fastify": "^10.3.9",
    "app-root-path": "^3.1.0",
    "argon2": "^0.40.3",
    "chalk": "^4",
    "class-transformer": "^0.5.1",
    "clone-deep": "^4.0.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "luxon": "^3.4.4",
    "mysql2": "^3.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "sharp": "^0.33.4",
    "umzug": "^3.8.1"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/clone-deep": "^4.0.4",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.2",
    "@types/sequelize": "^4.28.20",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "expect-type": "^0.19.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
