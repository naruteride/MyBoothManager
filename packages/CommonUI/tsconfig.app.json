{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true
  }
}
